{
  "repositories": ["nottmey/climate-platform-ui"],
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitScopeDisabled",
    ":dependencyDashboard"
  ],
  "enabledManagers": [
    "github-actions",
    "fvm",
    "pub"
  ],
  "prConcurrentLimit": 1,
  "onboarding": false,
  "requireConfig": "optional",
  "platform": "github",
  "branchPrefix": "deps/",
  "gitAuthor": "Local Renovate Bot <bot@renovateapp.com>",
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "minimumReleaseAge": "0 days"
    },
    {
      "matchUpdateTypes": ["minor"],
      "minimumReleaseAge": "7 days"
    },
    {
      "matchUpdateTypes": ["major"],
      "minimumReleaseAge": "21 days"
    }
  ]
}
